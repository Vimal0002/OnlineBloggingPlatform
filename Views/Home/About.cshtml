@{
    ViewData["Title"] = "About";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title display-font">About Our Platform</h1>
                    <p class="hero-subtitle">
                        Discover the story behind our vibrant blogging community and learn about 
                        our mission to connect writers and readers from around the world.
                    </p>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-image text-center">
                    <i class="fas fa-users" style="font-size: 12rem; color: rgba(255,255,255,0.1);"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Content Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="content-section">
                    <h2 class="display-font mb-4">
                        <i class="fas fa-heart text-danger"></i> Our Story
                    </h2>
                    <p class="lead">
                        Welcome to BlogPlatform, where stories come to life and voices are heard. 
                        We believe that everyone has a unique perspective worth sharing with the world.
                    </p>
                    <p>
                        Founded with the vision of creating an inclusive space for writers and readers, 
                        our platform brings together diverse voices from all walks of life. Whether you're 
                        a seasoned writer or just starting your blogging journey, you'll find a supportive 
                        community here that celebrates creativity and authentic storytelling.
                    </p>
                    <p>
                        Our mission is simple: to provide the tools, platform, and community that empowers 
                        individuals to share their ideas, experiences, and expertise with a global audience. 
                        We're committed to fostering meaningful connections through the power of written word.
                    </p>
                </div>

                <div class="content-section">
                    <h2 class="display-font mb-4">
                        <i class="fas fa-bullseye text-primary"></i> Our Mission
                    </h2>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="feature-box">
                                <div class="feature-icon">
                                    <i class="fas fa-users text-success"></i>
                                </div>
                                <h4>Build Community</h4>
                                <p>Connect writers and readers through shared interests and meaningful conversations.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="feature-box">
                                <div class="feature-icon">
                                    <i class="fas fa-rocket text-info"></i>
                                </div>
                                <h4>Empower Creators</h4>
                                <p>Provide intuitive tools and features that make content creation enjoyable and effective.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="feature-box">
                                <div class="feature-icon">
                                    <i class="fas fa-globe text-warning"></i>
                                </div>
                                <h4>Global Reach</h4>
                                <p>Help writers share their stories with audiences across the globe.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="feature-box">
                                <div class="feature-icon">
                                    <i class="fas fa-shield-alt text-danger"></i>
                                </div>
                                <h4>Safe Environment</h4>
                                <p>Maintain a respectful and inclusive space for all community members.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="display-font">
                        <i class="fas fa-star text-warning"></i> Our Values
                    </h2>
                    <p class="lead text-muted">The principles that guide everything we do</p>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="value-card text-center">
                            <div class="value-icon">
                                <i class="fas fa-lightbulb text-warning"></i>
                            </div>
                            <h4>Creativity</h4>
                            <p>We celebrate original thinking and encourage writers to explore new ideas and perspectives.</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="value-card text-center">
                            <div class="value-icon">
                                <i class="fas fa-hands-helping text-primary"></i>
                            </div>
                            <h4>Community</h4>
                            <p>We believe in the power of supportive communities and meaningful connections.</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="value-card text-center">
                            <div class="value-icon">
                                <i class="fas fa-gem text-success"></i>
                            </div>
                            <h4>Quality</h4>
                            <p>We strive for excellence in everything we do, from platform features to user experience.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="display-font">
                        <i class="fas fa-user-friends text-info"></i> Meet Our Team
                    </h2>
                    <p class="lead text-muted">The passionate individuals behind BlogPlatform</p>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="team-member text-center">
                            <div class="member-avatar mb-3">
                                <i class="fas fa-user-circle text-primary" style="font-size: 5rem;"></i>
                            </div>
                            <h5>Sarah Johnson</h5>
                            <p class="text-muted">Founder & CEO</p>
                            <p>Passionate about connecting writers with their audiences and building inclusive communities.</p>
                            <div class="social-links">
                                <a href="#" class="text-primary me-2"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="text-primary me-2"><i class="fab fa-linkedin-in"></i></a>
                                <a href="#" class="text-primary"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="team-member text-center">
                            <div class="member-avatar mb-3">
                                <i class="fas fa-user-circle text-success" style="font-size: 5rem;"></i>
                            </div>
                            <h5>Michael Chen</h5>
                            <p class="text-muted">Lead Developer</p>
                            <p>Dedicated to creating the best possible experience for writers and readers on our platform.</p>
                            <div class="social-links">
                                <a href="#" class="text-success me-2"><i class="fab fa-github"></i></a>
                                <a href="#" class="text-success me-2"><i class="fab fa-linkedin-in"></i></a>
                                <a href="#" class="text-success"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="team-member text-center">
                            <div class="member-avatar mb-3">
                                <i class="fas fa-user-circle text-warning" style="font-size: 5rem;"></i>
                            </div>
                            <h5>Emily Rodriguez</h5>
                            <p class="text-muted">Community Manager</p>
                            <p>Focused on building and nurturing our amazing community of writers and readers.</p>
                            <div class="social-links">
                                <a href="#" class="text-warning me-2"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="text-warning me-2"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="text-warning"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Join Us Section -->
<section class="py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center text-center text-white">
            <div class="col-lg-8">
                <h2 class="display-font mb-3">Join Our Story</h2>
                <p class="lead mb-4">
                    Ready to be part of our growing community? Start sharing your unique voice with the world.
                </p>
                <div class="join-buttons">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a href="@Url.Action("Create", "Blog")" class="btn btn-warning btn-lg me-3">
                            <i class="fas fa-plus"></i> Write Your First Post
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-lg me-3">
                            <i class="fas fa-user-plus"></i> Get Started Today
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <style>
        .content-section {
            margin-bottom: 3rem;
        }
        
        .feature-box {
            text-align: center;
            padding: 1.5rem;
        }
        
        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .value-card {
            padding: 2rem 1rem;
            height: 100%;
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }
        
        .value-card:hover {
            transform: translateY(-5px);
        }
        
        .value-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .team-member {
            padding: 2rem 1rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            height: 100%;
            transition: transform 0.3s ease;
        }
        
        .team-member:hover {
            transform: translateY(-5px);
        }
        
        .social-links a {
            font-size: 1.2rem;
            transition: opacity 0.3s ease;
        }
        
        .social-links a:hover {
            opacity: 0.7;
        }
        
        .join-buttons .btn {
            margin: 0.5rem;
        }
    </style>
}