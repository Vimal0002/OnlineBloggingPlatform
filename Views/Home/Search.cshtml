@model OnlineBloggingPlatform.ViewModels.SearchViewModel
@{
    ViewData["Title"] = "Search Posts";
    var categoryName = ViewBag.CategoryName as string;
    var tagName = ViewBag.TagName as string;
}

<div class="container page-transition">
    <div class="row">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="display-font mb-2">
                        @if (!string.IsNullOrEmpty(categoryName))
                        {
                            <span><i class="fas fa-tag text-primary"></i> @categoryName Posts</span>
                        }
                        else if (!string.IsNullOrEmpty(tagName))
                        {
                            <span><i class="fas fa-hashtag text-primary"></i> #@tagName</span>
                        }
                        else if (!string.IsNullOrEmpty(Model.Query))
                        {
                            <span><i class="fas fa-search text-primary"></i> Search Results</span>
                        }
                        else
                        {
                            <span><i class="fas fa-blog text-primary"></i> Browse All Posts</span>
                        }
                    </h2>
                    <p class="text-muted mb-0">
                        @if (Model.TotalResults > 0)
                        {
                            @Model.TotalResults @(Model.TotalResults == 1 ? "post found" : "posts found")
                        }
                        else
                        {
                            <span>No posts found</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.Query))
                        {
                            <span> for "@Model.Query"</span>
                        }
                    </p>
                </div>
            </div>

            @if (Model.Results.Any())
            {
                <div class="row">
                    @foreach (var post in Model.Results)
                    {
                        <div class="col-md-6 mb-4">
                            <article class="card post-card h-100 card-animate">
                                @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                                {
                                    <img src="@post.FeaturedImageUrl" class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                        <i class="fas fa-image text-white" style="font-size: 3rem; opacity: 0.5;"></i>
                                    </div>
                                }
                                <div class="card-body d-flex flex-column">
                                    @if (post.Category != null)
                                    {
                                        <a href="@Url.Action("Category", "Blog", new { id = post.CategoryId })" class="category-badge mb-2 align-self-start">
                                            <i class="@post.Category.IconClass"></i> @post.Category.Name
                                        </a>
                                    }
                                    <h5 class="card-title">
                                        <a href="@Url.Action("Post", "Blog", new { slug = post.Slug })" class="text-decoration-none">
                                            @post.Title
                                        </a>
                                    </h5>
                                    <p class="card-text post-excerpt flex-grow-1">@post.Excerpt</p>
                                    <div class="post-meta">
                                        <i class="fas fa-user"></i> @post.User.FirstName @post.User.LastName
                                        <i class="fas fa-calendar ms-2"></i> @post.PublishedAt?.ToString("MMM dd, yyyy")
                                        <i class="fas fa-eye ms-2"></i> @post.ViewCount
                                    </div>
                                </div>
                            </article>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Search results pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Search", new { query = Model.Query, categoryId = Model.CategoryId, tag = Model.Tag, page = Model.CurrentPage - 1 })">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Search", new { query = Model.Query, categoryId = Model.CategoryId, tag = Model.Tag, page = i })">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Search", new { query = Model.Query, categoryId = Model.CategoryId, tag = Model.Tag, page = Model.CurrentPage + 1 })">
                                        Next <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search text-muted" style="font-size: 5rem; opacity: 0.3;"></i>
                    <h3 class="mt-3 text-muted">No posts found</h3>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.Query))
                        {
                            <span>Sorry, we couldn't find any posts matching "@Model.Query".</span>
                        }
                        else
                        {
                            <span>No posts are available at the moment.</span>
                        }
                    </p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home"></i> Back to Home
                    </a>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 100px;">
                <!-- Search Widget -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-search"></i> Search Posts</h5>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Home" asp-action="Search" method="get">
                            <div class="input-group mb-3">
                                <input type="search" class="form-control" name="query" value="@Model.Query" placeholder="Search posts...">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Categories Widget -->
                @if (Model.Categories.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-th-large"></i> Categories</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var category in Model.Categories)
                            {
                                <a href="@Url.Action("Category", "Blog", new { id = category.Id })" class="d-block text-decoration-none p-2 rounded mb-2 category-link">
                                    <i class="@category.IconClass text-primary"></i> @category.Name
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add staggered animation to cards
            const cards = document.querySelectorAll('.card-animate');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
}