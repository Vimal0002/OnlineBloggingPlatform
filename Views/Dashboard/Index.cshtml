@model OnlineBloggingPlatform.ViewModels.UserDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-0">
    <div class="hero-section bg-gradient-primary text-white py-4 mb-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-6 fw-bold mb-2">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Dashboard
                    </h1>
                    <p class="lead mb-0">Welcome back, @Model.User.FirstName!</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-controller="Blog" asp-action="Create" class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> New Post
                        </a>
                        <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-user me-1"></i> Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- User Profile Section -->
            <div class="col-xl-4 col-lg-5 mb-4">
                <div class="card profile-card shadow-lg border-0 h-100">
                    <div class="card-body text-center p-4">
                        <div class="profile-avatar mb-3">
                            @if (!string.IsNullOrEmpty(Model.User.ProfileImageUrl))
                            {
                                <img src="@Model.User.ProfileImageUrl" alt="Profile" class="rounded-circle profile-img">
                            }
                            else
                            {
                                <div class="avatar-placeholder rounded-circle">
                                    <i class="fas fa-user fa-3x text-primary"></i>
                                </div>
                            }
                            <div class="camera-icon">
                                <i class="fas fa-camera"></i>
                            </div>
                        </div>
                        
                        <h3 class="fw-bold text-primary mb-1">@Model.User.FirstName @Model.User.LastName</h3>
                        <p class="text-muted small mb-2">@(@@Model.User.Email)</p>
                        
                        @if (!string.IsNullOrEmpty(Model.User.Bio))
                        {
                            <p class="text-muted small mb-3">@Model.User.Bio</p>
                        }
                        else
                        {
                            <p class="text-muted small mb-3">No bio added yet.</p>
                        }

                        <div class="profile-info d-flex justify-content-around text-center mb-3">
                            <div class="info-item">
                                <i class="fas fa-calendar text-primary"></i>
                                <small class="d-block text-muted">Joined @Model.User.DateJoined.ToString("MMMM yyyy")</small>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-blog text-success"></i>
                                <small class="d-block text-muted">@Model.Statistics.TotalBlogs Blogs</small>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-envelope text-info"></i>
                                <small class="d-block text-muted">@Model.User.Email</small>
                            </div>
                        </div>

                        <div class="profile-actions d-grid gap-2">
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit me-1"></i> EDIT PROFILE
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-xl-8 col-lg-7">
                <!-- Statistics Cards -->
                <div class="row g-3 mb-4">
                    <div class="col-xl-3 col-md-6">
                        <div class="stat-card card border-0 shadow-sm h-100">
                            <div class="card-body text-center p-3">
                                <div class="stat-icon text-primary mb-2">
                                    <i class="fas fa-file-alt fa-2x"></i>
                                </div>
                                <h3 class="stat-number fw-bold mb-1">@Model.Statistics.TotalPosts</h3>
                                <p class="stat-label text-muted small mb-0">Total Posts</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xl-3 col-md-6">
                        <div class="stat-card card border-0 shadow-sm h-100">
                            <div class="card-body text-center p-3">
                                <div class="stat-icon text-info mb-2">
                                    <i class="fas fa-eye fa-2x"></i>
                                </div>
                                <h3 class="stat-number fw-bold mb-1">@Model.Statistics.TotalViews.ToString("N0")</h3>
                                <p class="stat-label text-muted small mb-0">Total Views</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xl-3 col-md-6">
                        <div class="stat-card card border-0 shadow-sm h-100">
                            <div class="card-body text-center p-3">
                                <div class="stat-icon text-success mb-2">
                                    <i class="fas fa-blog fa-2x"></i>
                                </div>
                                <h3 class="stat-number fw-bold mb-1">@Model.Statistics.TotalBlogs</h3>
                                <p class="stat-label text-muted small mb-0">Blogs</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xl-3 col-md-6">
                        <div class="stat-card card border-0 shadow-sm h-100">
                            <div class="card-body text-center p-3">
                                <div class="stat-icon text-warning mb-2">
                                    <i class="fas fa-star fa-2x"></i>
                                </div>
                                <h3 class="stat-number fw-bold mb-1">@Model.Statistics.FeaturedPosts</h3>
                                <p class="stat-label text-muted small mb-0">Featured Posts</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-transparent border-0 py-3">
                        <h5 class="card-title mb-0 fw-bold">
                            <i class="fas fa-bolt text-warning me-2"></i>
                            Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a asp-controller="Blog" asp-action="Create" class="btn btn-primary action-btn">
                                        <i class="fas fa-plus me-2"></i>
                                        CREATE NEW POST
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <button type="button" class="btn btn-success action-btn" data-bs-toggle="modal" data-bs-target="#createBlogModal">
                                        <i class="fas fa-blog me-2"></i>
                                        CREATE NEW BLOG
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary action-btn">
                                        <i class="fas fa-user-cog me-2"></i>
                                        EDIT PROFILE
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navigation Tabs -->
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-transparent border-0">
                        <ul class="nav nav-tabs card-header-tabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active fw-bold" id="posts-tab" data-bs-toggle="tab" 
                                        data-bs-target="#posts-pane" type="button" role="tab">
                                    <i class="fas fa-file-alt me-2"></i>Posts
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link fw-bold" id="blogs-tab" data-bs-toggle="tab" 
                                        data-bs-target="#blogs-pane" type="button" role="tab">
                                    <i class="fas fa-blog me-2"></i>Blogs
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link fw-bold" id="settings-tab" data-bs-toggle="tab" 
                                        data-bs-target="#settings-pane" type="button" role="tab">
                                    <i class="fas fa-cog me-2"></i>Settings
                                </button>
                            </li>
                        </ul>
                    </div>
                    
                    <div class="card-body">
                        <div class="tab-content">
                            <!-- Posts Tab -->
                            <div class="tab-pane fade show active" id="posts-pane" role="tabpanel">
                                @if (Model.RecentPosts.Any())
                                {
                                    <div class="row">
                                        @foreach (var post in Model.RecentPosts)
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="post-card card border-0 shadow-sm h-100">
                                                    <div class="card-body p-3">
                                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                                            <span class="badge bg-primary small">@post.Category?.Name</span>
                                                            <div class="post-actions dropdown">
                                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                                                    <i class="fas fa-ellipsis-v"></i>
                                                                </button>
                                                                <ul class="dropdown-menu">
                                                                    <li><a class="dropdown-item" asp-controller="Blog" asp-action="Edit" asp-route-id="@post.Id">Edit</a></li>
                                                                    <li><a class="dropdown-item" asp-controller="Blog" asp-action="Post" asp-route-slug="@post.Slug">View</a></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                        <h6 class="card-title mb-2">@post.Title</h6>
                                                        <p class="card-text text-muted small mb-2">@(post.Excerpt != null && post.Excerpt.Length > 0 ? post.Excerpt.Substring(0, Math.Min(80, post.Excerpt.Length)) : "")...</p>
                                                        <div class="post-meta d-flex justify-content-between align-items-center">
                                                            <small class="text-muted">@post.CreatedAt.ToString("MMM dd")</small>
                                                            <div class="d-flex align-items-center gap-2">
                                                                <span class="badge @(post.IsPublished ? "bg-success" : "bg-secondary") small">
                                                                    @(post.IsPublished ? "Published" : "Draft")
                                                                </span>
                                                                <small class="text-muted">
                                                                    <i class="fas fa-eye me-1"></i>@post.ViewCount
                                                                </small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">No posts yet</h5>
                                        <p class="text-muted">Start sharing your thoughts with the world!</p>
                                        <a asp-controller="Blog" asp-action="Create" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i> CREATE YOUR FIRST POST
                                        </a>
                                    </div>
                                }
                            </div>

                            <!-- Blogs Tab -->
                            <div class="tab-pane fade" id="blogs-pane" role="tabpanel">
                                @if (Model.UserBlogs.Any())
                                {
                                    <div class="row">
                                        @foreach (var blog in Model.UserBlogs)
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="blog-card card border-0 shadow-sm h-100">
                                                    <div class="card-body p-3">
                                                        <h6 class="card-title mb-2">@blog.Title</h6>
                                                        <p class="card-text text-muted small mb-2">@blog.Description</p>
                                                        <div class="blog-meta d-flex justify-content-between align-items-center">
                                                            <small class="text-muted">@blog.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                            <span class="badge bg-info small">@blog.BlogPosts.Count() posts</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <i class="fas fa-blog fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">No blogs yet</h5>
                                        <p class="text-muted">Create your first blog to organize your posts!</p>
                                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createBlogModal">
                                            <i class="fas fa-plus me-2"></i> CREATE YOUR FIRST BLOG
                                        </button>
                                    </div>
                                }
                            </div>

                            <!-- Settings Tab -->
                            <div class="tab-pane fade" id="settings-pane" role="tabpanel">
                                <div class="settings-section">
                                    <h6 class="fw-bold mb-3">Account Settings</h6>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <a href="@Url.Action("Profile", "Account")" class="setting-item card border-0 shadow-sm text-decoration-none">
                                                <div class="card-body p-3 d-flex align-items-center">
                                                    <i class="fas fa-user-edit fa-2x text-primary me-3"></i>
                                                    <div>
                                                        <h6 class="mb-1">Edit Profile</h6>
                                                        <small class="text-muted">Update your personal information</small>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <a href="#" class="setting-item card border-0 shadow-sm text-decoration-none">
                                                <div class="card-body p-3 d-flex align-items-center">
                                                    <i class="fas fa-key fa-2x text-warning me-3"></i>
                                                    <div>
                                                        <h6 class="mb-1">Change Password</h6>
                                                        <small class="text-muted">Update your account password</small>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <a href="#" class="setting-item card border-0 shadow-sm text-decoration-none">
                                                <div class="card-body p-3 d-flex align-items-center">
                                                    <i class="fas fa-bell fa-2x text-info me-3"></i>
                                                    <div>
                                                        <h6 class="mb-1">Notifications</h6>
                                                        <small class="text-muted">Manage your notification preferences</small>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <a href="#" class="setting-item card border-0 shadow-sm text-decoration-none">
                                                <div class="card-body p-3 d-flex align-items-center">
                                                    <i class="fas fa-shield-alt fa-2x text-success me-3"></i>
                                                    <div>
                                                        <h6 class="mb-1">Privacy</h6>
                                                        <small class="text-muted">Control your privacy settings</small>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Blog Modal -->
<div class="modal fade" id="createBlogModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Blog</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createBlogForm" method="post" action="">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Blog Title</label>
                        <input type="text" class="form-control" name="Title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create Blog</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .profile-card {
        border-radius: 15px;
        transition: all 0.3s ease;
    }
    
    .profile-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }
    
    .profile-avatar {
        position: relative;
        display: inline-block;
    }
    
    .profile-img, .avatar-placeholder {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 4px solid #fff;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .avatar-placeholder {
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .camera-icon {
        position: absolute;
        bottom: 0;
        right: 0;
        background: #007bff;
        color: white;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .camera-icon:hover {
        background: #0056b3;
        transform: scale(1.1);
    }
    
    .stat-card {
        transition: all 0.3s ease;
        border-radius: 10px;
    }
    
    .stat-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    .stat-number {
        font-size: 2rem;
        color: #333;
    }
    
    .action-btn {
        padding: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .post-card, .blog-card {
        transition: all 0.3s ease;
        border-radius: 10px;
    }
    
    .post-card:hover, .blog-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    
    .setting-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    
    .nav-tabs .nav-link {
        border: none;
        color: #6c757d;
        transition: all 0.3s ease;
    }
    
    .nav-tabs .nav-link:hover, .nav-tabs .nav-link.active {
        color: #007bff;
        border-bottom: 2px solid #007bff;
        background: transparent;
    }
    
    @@media (max-width: 768px) {
        .stat-number {
            font-size: 1.5rem;
        }
        
        .profile-img, .avatar-placeholder {
            width: 80px;
            height: 80px;
        }
        
        .action-btn {
            font-size: 12px;
            padding: 8px;
        }
    }
</style>