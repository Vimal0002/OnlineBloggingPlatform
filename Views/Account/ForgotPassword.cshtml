@model OnlineBloggingPlatform.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container-fluid px-0">
    <div class="hero-section text-white py-5 mb-5">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3">
                        <i class="fas fa-key me-3"></i>
                        Password Recovery
                    </h1>
                    <p class="lead">Don't worry, we'll help you reset your password</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 auth-card">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <div class="auth-icon-container mb-3">
                            <i class="fas fa-lock fa-3x"></i>
                        </div>
                        <h3 class="card-title mb-0">Reset Your Password</h3>
                        <p class="card-subtitle mt-2 opacity-75">Enter your email to receive reset instructions</p>
                    </div>
                    
                    <div class="card-body p-5">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="mb-4 text-center">
                            <div class="info-box p-3 bg-light rounded">
                                <i class="fas fa-info-circle text-primary me-2"></i>
                                <small class="text-muted">
                                    Enter your email address and we'll send you instructions to reset your password.
                                </small>
                            </div>
                        </div>

                        <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                            
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-bold">
                                    <i class="fas fa-envelope text-primary me-2"></i>
                                    Email Address
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="fas fa-at"></i>
                                    </span>
                                    <input asp-for="Email" 
                                           class="form-control" 
                                           type="email" 
                                           placeholder="Enter your email address"
                                           required>
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-shield-alt text-success me-1"></i>
                                    We'll never share your email with anyone else
                                </div>
                            </div>

                            <div class="d-grid gap-2 mb-4">
                                <button type="submit" class="btn btn-primary btn-lg auth-btn">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Send Reset Instructions
                                </button>
                            </div>
                        </form>

                        <div class="text-center">
                            <div class="divider-container my-4">
                                <div class="divider-line"></div>
                                <span class="divider-text px-3 text-muted">or</span>
                                <div class="divider-line"></div>
                            </div>
                            
                            <div class="auth-links">
                                <p class="mb-3">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    Remember your password?
                                </p>
                                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                    <a asp-action="Login" class="btn btn-outline-primary me-md-2">
                                        <i class="fas fa-sign-in-alt me-2"></i>
                                        Back to Login
                                    </a>
                                    <a asp-action="Register" class="btn btn-outline-success">
                                        <i class="fas fa-user-plus me-2"></i>
                                        Create Account
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-center py-3">
                        <div class="security-info">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt text-success me-1"></i>
                                Your password reset is secure and encrypted
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Help Section -->
                <div class="help-section mt-4">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center py-4">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-question-circle me-2"></i>
                                Need Help?
                            </h5>
                            <p class="text-muted mb-3">
                                If you're having trouble resetting your password, here are some common solutions:
                            </p>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="help-item">
                                        <i class="fas fa-search fa-2x text-primary mb-2"></i>
                                        <h6>Check Spam Folder</h6>
                                        <small class="text-muted">
                                            Reset emails might end up in your spam or junk folder
                                        </small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="help-item">
                                        <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                        <h6>Wait a Few Minutes</h6>
                                        <small class="text-muted">
                                            It may take up to 10 minutes for the email to arrive
                                        </small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="help-item">
                                        <i class="fas fa-envelope fa-2x text-info mb-2"></i>
                                        <h6>Contact Support</h6>
                                        <small class="text-muted">
                                            Still having issues? <a href="mailto:support@blogplatform.com" class="text-decoration-none">Contact us</a>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Email format validation
        document.getElementById('Email').addEventListener('blur', function() {
            const email = this.value;
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            
            if (email && !emailRegex.test(email)) {
                this.setCustomValidity('Please enter a valid email address');
                this.reportValidity();
            } else {
                this.setCustomValidity('');
            }
        });

        // Show loading state on form submission
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = document.querySelector('.auth-btn');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';
            submitBtn.disabled = true;
        });

        // Auto-focus email field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('Email').focus();
        });
    </script>
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.1);
    }
    
    .auth-card {
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        animation: slideInUp 0.6s ease-out;
    }
    
    .auth-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }
    
    .auth-icon-container {
        background: rgba(255, 255, 255, 0.1);
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        backdrop-filter: blur(10px);
    }
    
    .auth-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 50px;
        padding: 12px 30px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }
    
    .auth-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
    }
    
    .auth-btn:active {
        transform: translateY(0);
    }
    
    .input-group-text {
        background: #f8f9fa;
        border-right: none;
    }
    
    .form-control {
        border-left: none;
        border-radius: 0 10px 10px 0;
    }
    
    .input-group-text + .form-control {
        border-radius: 0 10px 10px 0;
    }
    
    .input-group:focus-within .input-group-text {
        background: #e3f2fd;
        border-color: #86b7fe;
    }
    
    .divider-container {
        display: flex;
        align-items: center;
        text-align: center;
    }
    
    .divider-line {
        flex: 1;
        height: 1px;
        background: #dee2e6;
    }
    
    .divider-text {
        background: white;
        font-size: 0.875rem;
    }
    
    .auth-links a {
        border-radius: 25px;
        padding: 8px 20px;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .auth-links a:hover {
        transform: translateY(-1px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .help-section {
        animation: fadeInUp 0.8s ease-out;
    }
    
    .help-item {
        padding: 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }
    
    .help-item:hover {
        background: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-3px);
    }
    
    .info-box {
        border-left: 4px solid #0d6efd;
    }
    
    .alert {
        border-radius: 10px;
        border: none;
    }
    
    .btn {
        border-radius: 8px;
    }
    
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@media (max-width: 768px) {
        .auth-card {
            margin: 0 15px;
        }
        
        .hero-section {
            padding: 3rem 0;
        }
        
        .hero-section h1 {
            font-size: 2rem;
        }
        
        .help-item {
            text-align: center;
            margin-bottom: 20px;
        }
    }
</style>