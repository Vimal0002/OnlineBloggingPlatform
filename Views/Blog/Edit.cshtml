    }
    
    .stat-item i {
        display: block;
        font-size: 1.5rem;
    }
    
    .form-switch .form-check-input {
        width: 3rem;
        height: 1.5rem;
    }
    
    .alert {
        border-radius: 10px;
    }
    
    .btn {
        border-radius: 8px;
    }
</style>