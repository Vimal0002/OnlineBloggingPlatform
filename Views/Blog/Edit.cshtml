        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
    }
    
    .card {
        transition: all 0.3s ease;
        border-radius: 15px;
    }
    
    .editor-toolbar {
        padding: 10px;
        background-color: #f8f9fa;
        border-radius: 5px;
    }
    
    .content-editor {
        min-height: 300px;
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
