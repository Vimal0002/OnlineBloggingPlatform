{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=OnlineBloggingPlatform.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "ApplicationName": "Online Blogging Platform",
    "ApplicationDescription": "A modern blogging platform built with ASP.NET Core",
    "Version": "1.0.0",
    "SupportEmail": "support@yourdomain.com",
    "MaxImageUploadSize": 5242880,
    "AllowedImageFormats": ["jpg", "jpeg", "png", "gif", "webp"],
    "PostsPerPage": 10,
    "MaxTagsPerPost": 10,
    "EnableComments": true,
    "RequireEmailConfirmation": false,
    "CacheExpirationMinutes": 60
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "Your Blog Platform"
  }
}